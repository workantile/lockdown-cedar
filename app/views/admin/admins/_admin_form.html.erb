<%= form_for([:admin, @admin], :html => {:class => 'form-horizontal'}) do |f| %>
	<%= build_control(f, @admin, nil, :email, 'text').html_safe %>
	<%= build_control(f, @admin, nil, :password, 'password').html_safe %>
	<%= build_control(f, @admin, nil, :password_confirmation, 'password').html_safe %>
	<%= f.submit button_label, :class => 'btn btn-primary' %>
<% end %>