<%= button_to 'Add new admin', new_admin_admin_url, :method => :get, :class => 'btn btn-success' %>
<table class="table table-bordered table-condensed table-striped">
	<thead>
		<th>admin</th>
		<th>Delete</th>
	</thead>
	<tbody>
	<% @admins.each do |admin| %>
		<tr>
			<td><%= link_to admin.email, edit_admin_admin_path(admin) %></td>
			<td><%= button_to 'Delete', admin_admin_path(admin), :confirm => "Are you sure?", :method => :delete, :class => 'btn btn-danger' %></td>
		</tr>
	<% end %>
	</tbody>
</table>
