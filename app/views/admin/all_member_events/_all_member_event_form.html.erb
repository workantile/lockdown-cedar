<%= form_for([:admin, @all_member_event], :html => {:class => 'form-horizontal'}) do |f| %>
<div class="container">
	<div class="row">
		<div class="span3">
			<p><%= f.submit button_label, :class => 'btn btn-primary' %></p>
		</div>
		<div class="span9">
			<%= build_control(f, @all_member_event, nil, :name, 'text').html_safe %>
			<%= build_control(f, @all_member_event, nil, :scheduled, 'datetime').html_safe %>
		</div>
	</div>
</div>
<% end %>
<%= button_to('Delete all member event', admin_all_member_event_path(@all_member_event), :confirm => "Are you sure?", 
:method => :delete, :class => 'btn btn-danger') unless @all_member_event.new_record? %>
