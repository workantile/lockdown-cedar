<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
			<%= form_tag export_admin_members_url do %>
				<%= build_filters %>
				<%= submit_tag "Export members", :class => 'btn btn-primary' %>
			<% end %>
			<h5>Member totals:</h5>
			<ul>
				<li>Current: <%= Member.current.count %></li>
				<li>Full: <%= Member.full.count %></li>
				<li>Full - no work: <%= Member.full_no_work.count %></li>
				<li>Affiliate: <%= Member.affiliate.count %></li>
				<li>Student: <%= Member.student.count %></li>
				<li>Supporting: <%= Member.supporting.count %></li>
			</ul>
			<h5>Non-member totals:</h5>
			<ul>
				<li>Courtesy keys: <%= Member.courtesy_key.count %></li>
				<li>Former: <%= Member.former.count %></li>
			</ul>
			<%= form_tag find_key_admin_members_url do %>
				<div class="form-group">
					<%= label_tag :rfid_key, "Find member with this key" %>
					<%= text_field_tag :rfid_key, nil, class: "form-control" %>
				</div>
				<%= submit_tag "Find member", :class => 'btn btn-primary' %>
			<% end %>
		</div>
		<div class="col-md-9">
			<%= button_to 'Add new member', new_admin_member_url, :method => :get, :class => 'btn btn-success' %>
			<div id="members-table" class="members-table">
				<%= render :partial => 'members_table' %>
			</div>
		</div>
	</div>
</div>
