<%= button_to 'Add new member', new_admin_member_url, :method => :get, :class => 'btn btn-success' %>
<p>total members: <%= Member.all_members.count %>, full: <%= Member.full_members.count %>, 
	full - no work: <%= Member.full_no_work_members.count %>, affiliate: <%= Member.affiliate_members.count %>, 
	student: <%= Member.student_members.count %>, non-members: <%= Member.non_members.count %></p>
<table class="table table-bordered table-condensed table-striped">
	<thead>
		<th>member</th>
		<th>type</th>
		<th>joined</th>
		<th>Delete</th>
	</thead>
	<tbody>
	<% @members.each do |member| %>
		<tr>
			<td><%= link_to member.full_name, edit_admin_member_path(member) %></td>
			<td><%= member.member_type %></td>
			<td><%= member.anniversary_date.strftime("%m/%d/%Y") %></td>
			<td><%= button_to 'Delete', admin_member_path(member), :method => :delete, :class => 'btn btn-danger' %></td>
		</tr>
	<% end %>
	</tbody>
</table>
